<%= form_for @article do |form| %>
  <%= form.label 'Article Title' %><br>
  <%= form.text_field :title %><br>
 <%# creates article[:title] within params %>
  <%= form.label 'Article Description' %><br>
  <%= form.text_area :description %><br>
 <%# creates article[:description] within params %>
  <%= form.submit "Submit Article" %>
<% end %>


